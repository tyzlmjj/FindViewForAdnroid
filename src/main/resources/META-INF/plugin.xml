<idea-plugin>
    <id>me.majiajie.ideaplugin.findviewforandroid</id>
    <name>FindViewForAndroid</name>
    <version>1.2.0</version>
    <vendor email="tyzl931019@gmail.com" url="https://github.com/tyzlmjj/FindViewForAndroid">MJJ</vendor>

