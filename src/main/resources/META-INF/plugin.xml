<idea-plugin>
    <id>me.majiajie.ideaplugin.findviewforandroid</id>
    <name>FindViewForAndroid</name>
    <vendor email="tyzl931019@gmail.com" url="https://github.com/tyzlmjj/FindViewForAndroid">MJJ</vendor>

    <description><![CDATA[
    Generate Android 'findViewById' code.Support for Java and Kotlin.
    ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.android</depends>

    <actions>
        <action id="me.majiajie.FindViewForAndroid.GenerateFindView" class="me.majiajie.fvfa.action.GenerateFindViewAction"
                text="Generate FindViewById" description="Generate &#39;findViewById&#39; code">
            <add-to-group group-id="XmlGenerateToolsGroup" relative-to-action="GenerateDTD" anchor="before"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl I"/>
        </action>
    </actions>

</idea-plugin>